<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_profile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:contentDescription=""
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"
                    android:tint="@color/colorUserPlaceholderIcon"
                    app:riv_border_color="@color/colorUserBorder"
                    app:riv_border_width="3dp"
                    app:riv_corner_radius="100dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="true" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Employee Id :  "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/app_title_small" />

                            <TextView
                                android:id="@+id/text_emp_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="E10D2" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username :  "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/app_title_small" />

                            <TextView
                                android:id="@+id/text_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="guard1" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_checkin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/card_checkin_color"
                        app:cardCornerRadius="@dimen/card_radius">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:src="@drawable/checkin"
                                android:tint="@color/colorWhite" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Checkin"
                                android:textColor="@color/colorSpinnerBG"
                                android:textSize="@dimen/app_title" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_checkout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/card_checkout_color"
                        app:cardCornerRadius="@dimen/card_radius">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:src="@drawable/checkout"
                                android:tint="@color/colorWhite" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Checkout"
                                android:textColor="@color/colorSpinnerBG"
                                android:textSize="@dimen/app_title" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_alarm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/card_alarm_color"
                        app:cardCornerRadius="@dimen/card_radius">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:src="@drawable/alarm"
                                android:tint="@color/colorWhite" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Emergency"
                                android:textColor="@color/colorSpinnerBG"
                                android:textSize="@dimen/app_title" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/card_location_color"
                        app:cardCornerRadius="@dimen/card_radius">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:src="@drawable/ic_location"
                                android:tint="@color/colorWhite" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_large"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Send Location"
                                android:textColor="@color/colorSpinnerBG"
                                android:textSize="@dimen/app_title" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_double_extra_large"
                    android:layout_marginStart="@dimen/spacing_double_extra_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/card_logout_color"
                    app:cardCornerRadius="@dimen/card_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Logout"
                            android:textColor="@color/colorSpinnerBG"
                            android:textSize="@dimen/app_title" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="@dimen/spacing_large"
                            android:layout_weight="1"
                            android:src="@drawable/logout" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>